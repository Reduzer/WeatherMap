<Window x:Class="WeatherMap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherMap"
        mc:Ignorable="d"
        Title="WeatherMap by Reduzer" 
        MinHeight="450" 
        Height="450"
        MinWidth="800"
        Width="800"
        Background="#606060"
        Foreground="White"
        KeyDown="MainWindow_OnKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        
        <Grid
            Grid.Row="0"
            Name="Header">
            
            <Label Name="HeadingLabel"
                   Margin="10,10,570,0"
                   Padding="0"
                   Foreground="White"
                   Background="#606060"
                   BorderBrush="Black"
                   BorderThickness="1"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Content="Choose a location:">
            </Label>
            
            <Button
                Name="UseCurrentLocationButton"
                Click="UseCurrentLocationButton_OnClick"
                Margin="650,10,10,0"
                Content="Use Current Location"
                Background="#606060"
                Foreground="White"
                BorderBrush="Black">
            </Button>
            
            <TextBox 
                Name="LocationInput"
                Margin="300,10,300,0"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Background="#606060"
                Foreground="White"
                BorderBrush="Black">
                Location's Name
            </TextBox>
        </Grid>
        
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="10">
                <StackPanel
                    VerticalAlignment="Center"
                    Margin="10">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Margin" Value="10"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label
                        Name="LocationName"
                        HorizontalContentAlignment="Center">
                        Name</Label>
                    <Label
                        Name="LocationCountry"
                        HorizontalContentAlignment="Center">
                        Country</Label>
                    <Label
                        Name="LocationLongitude"
                        HorizontalContentAlignment="Center">
                        Longitude</Label>
                    <Label
                        Name="LocationLatitude"
                        HorizontalContentAlignment="Center">
                        Latitude</Label>
                    <Label
                        Name="LocationTemperature"
                        HorizontalContentAlignment="Center">
                        Temperature</Label>
                    <Label
                        Name="LocationWindSpeed"
                        HorizontalContentAlignment="Center">
                        WindSpeed</Label>
                    <Label
                        Name="LocationHumidity"
                        HorizontalContentAlignment="Center">
                        Humidity</Label>
                </StackPanel>
            </Border>
            
            
            <Border Grid.Column="1"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Margin="10">
                <StackPanel
                    VerticalAlignment="Center"
                    Margin="10">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Margin" Value="10"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </StackPanel.Resources>
                    <Label
                        Name="LocationNameValue"
                        HorizontalContentAlignment="Center">
                        Name</Label>
                    <Label
                        Name="LocationCountryValue"
                        HorizontalContentAlignment="Center">
                        Country</Label>
                    <Label
                        Name="LocationLongitudeValue"
                        HorizontalContentAlignment="Center">
                        Longitude</Label>
                    <Label
                        Name="LocationLatitudeValue"
                        HorizontalContentAlignment="Center">
                        Latitude</Label>
                    <Label
                        Name="LocationTemperatureValue"
                        HorizontalContentAlignment="Center">
                        Temperature</Label>
                    <Label
                        Name="LocationWindSpeedValue"
                        HorizontalContentAlignment="Center">
                        WindSpeed</Label>
                    <Label
                        Name="LocationHumidityValue"
                        HorizontalContentAlignment="Center">
                        Humidity</Label>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
